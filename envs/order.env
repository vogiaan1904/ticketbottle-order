# ================================
# ENVIRONMENT
# ================================
ENV=production

# ================================
# SERVER CONFIGURATION
# ================================
SERVER_GRPC_PORT=50054
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# ================================
# PAYMENT
# ================================
PAYMENT_TIMEOUT_SECONDS=600

# ================================
# MONGODB CONFIGURATION (Docker container names)
# ================================
MONGO_URI=mongodb://root:root@mongo-order:27017
MONGO_DATABASE=ticketbottle-order

# ================================
# TEMPORAL CONFIGURATION (Docker container name)
# ================================
TEMPORAL_HOST_PORT=temporal:7233
TEMPORAL_NAMESPACE=default

# ================================
# JWT CONFIGURATION
# ================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY=15m

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_MODE=production
LOG_ENCODING=json

# ================================
# KAFKA CONFIGURATION (Docker container name)
# ================================
KAFKA_BROKERS=kafka:29092
KAFKA_PRODUCER_RETRY_MAX=3
KAFKA_PRODUCER_REQUIRED_ACKS=1
KAFKA_ENABLED=true
KAFKA_CONSUMER_GROUP_ID=order-service

# ================================
# MICROSERVICES CONFIGURATION (Docker container names)
# ================================
EVENT_SERVICE_ADDR=event-service:50053
INVENTORY_SERVICE_ADDR=inventory-service:50057
PAYMENT_SERVICE_ADDR=payment-service:50055
